<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/product_border"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="200dp"

        android:layout_height="300dp">

        <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="140dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        </RelativeLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_launcher"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:id="@+id/tvProductName"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rlImage"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Napa Valleyndsdj  jksjd  ksdjjdj jdjd  dksdkjskdksdj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:text="$200"
            android:id="@+id/tvProductPrice"
            android:layout_marginTop="7dp"
            android:layout_below="@id/tvProductName"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/btnAddToCart"
            android:layout_alignParentBottom="true"
            android:background="@color/product_add_to_cart_back_color"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:text="@string/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_above="@id/btnAddToCart"
            android:background="@color/product_border_color"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </RelativeLayout>

</RelativeLayout>
